<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="nsu.krpo.academads.ui.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_auth"/>
    <fragment
        android:id="@+id/mainScreenFragment"
        android:name="nsu.krpo.academads.ui.main_screen.MainScreenFragment"
        android:label="MainScreenFragment"
        tools:layout="@layout/fragment_main_screen">
        <argument
            android:name="userId"
            app:argType="long"
            android:defaultValue="0L"/>
        <action
            android:id="@+id/action_mainScreenFragment_to_itemFragment"
            app:destination="@id/itemFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemFragment"
        android:name="nsu.krpo.academads.ui.ItemFragment"
        android:label="ItemFragment"
        tools:layout="@layout/fragment_item"/>
    <fragment
        android:id="@+id/splashFragment"
        android:name="nsu.krpo.academads.ui.splash_screen.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/toMainScreen"
            app:destination="@id/mainScreenFragment" />
        <action
            android:id="@+id/toLogin"
            app:destination="@id/authFragment" />
    </fragment>
</navigation>