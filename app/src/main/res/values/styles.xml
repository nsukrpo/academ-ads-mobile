<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">35dp</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">25dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="PrimaryButtonText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">12sp</item>

    </style>

    <style name="ProductTitle" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/TextPrimary</item>
    </style>

    <style name="DateText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SimpleText">
        <item name="android:textColor">@color/TextSecondary</item>
        <item name="android:lineHeight">26dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingHorizontal">20dp</item>

    </style>

    <style name="SignInButton" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/TextPrimary</item>
    </style>

    <style name="RoundedRectangle">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>